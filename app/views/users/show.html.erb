<h1><%= @user.name %>のページ</h1>

<p>お気に入り一覧</p>



<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
  </tr>
  <tr>
    <% @user.favorites.each do |favorite| %>
    <td><%= favorite.blog.title%></td>
    <td><%= favorite.blog.content%></td>
    <td><%= favorite.blog.user.name%></td>

  </tr>
<% end %>
</table>
